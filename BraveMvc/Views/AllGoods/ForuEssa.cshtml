@model PagedList.IPagedList<Models.Forum>
@using PagedList.Mvc
@{
    ViewBag.Title = "ForuEssa";
    Layout = null;
}
<div class="row">
    @foreach (var p in Model)
    {
        
            <div class="col-md-6 col-sm-6">
                <article class="blog-teaser">
                    <header>
                        <img src="@p.ForumImage" alt="">
                        <h3><a href="@Url.Action("EssayDetail","Forum", new { id = p.Forum_id})">@p.ForumName</a></h3>
                        <span class="meta">@p.ForumTime.ToString("MM-dd hh:mm")</span>
                        <hr>
                    </header>

                </article>
            </div>
       
    }
</div>
<div class="paging">
    @Html.PagedListPager(Model, page => Url.Action("ForuEssa", "AllGoods", new { page, currentFilter = ViewBag.CurrentFilter }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                 new AjaxOptions
                 {
                     HttpMethod = "GET",
                     InsertionMode = InsertionMode.Replace,
                     UpdateTargetId = "forumessaybut"

                 }
))
</div>

