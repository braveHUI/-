@model IEnumerable<Models.HistoryVideo>
@{
    ViewBag.Title = "Search";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/History.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-10 searchpage">
            <div class="col-lg-10"><h2>搜索结果</h2></div>
        </div>
    </div>
    <div class="col-lg-12">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 seacrchshow">
                <figure>
                    <img src="@item.Video_img" />
                    <figcaption>
                        <a href="@Url.Action("Detail",new { id=item.Video_id,classid=@item.VideoClassify_id})"><p>《@item.VideoName》</p></a>
                        <p>@item.Director</p>
                        <p>@item.VideoCountry</p>
                    </figcaption>
                </figure>
            </div>
        }
     </div>

</div>
