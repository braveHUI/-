<script type="text/javascript">
        var _recommend=$('.select .more a');//获取span a
        _recommend.click(function (e) {
            
var _r=$(this).parent().parent('ul');//获取该span父类ul
            if($(this).hasClass("down")){//判断是否含有DOwn
              $(this).removeClass('down');
               _r.stop(true,false).animate({height:"100px"},"slow");
             $(this).addClass('up');
               $(this).text("收起");//值变为收起

            }else{
                $(this).addClass('down');
                 $(this).removeClass('up')
                $(this).text("更多");
                  _r.stop(true,false).animate({height:"60px"},"slow");

            }
        });
</script>
